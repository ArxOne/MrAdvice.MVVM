<controls:ChildWindow x:Class="TestApplication.Silverlight.View.PopupView"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:mrAdvice="urn:MrAdvice/View"
           Width="400" Height="300" 
           Title="PopupView">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="The answer is 42" Command="{Binding FortyTwo}"/>
            <Button Content="The truth is out there" Command="{Binding OutThere}" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</controls:ChildWindow>